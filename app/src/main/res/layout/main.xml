<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#882288"
              android:gravity="center"
              android:orientation="vertical"
  >

  <TextView
    android:id="@+id/mDebug"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:layout_gravity="center_vertical"
    android:layout_marginTop="20dp"
    android:background="#777000"
    android:editable="false"
    android:text="Value : "
    android:textSize="32sp"
    android:visibility="invisible"/>

  <TextView
    android:id="@+id/mTvDisplayDec"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:layout_gravity="center_vertical"
    android:layout_marginTop="20dp"
    android:background="#777000"
    android:editable="false"
    android:text="DEC . "
    android:textSize="32sp"/>

  <TextView
    android:id="@+id/mTvDisplayHex"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:layout_gravity="center_vertical"
    android:layout_marginTop="20dp"
    android:background="#777000"
    android:editable="false"
    android:text="HEX . "
    android:textSize="32sp"/>

  <TableLayout
    android:id="@+id/mTlNumberPad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:numColumns="4"
    android:stretchColumns="*"
    >

    <TableRow
      android:layout_weight="1"
      android:gravity="center">

      <Button
        android:id="@+id/btn_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textSize="24sp"
        />

      <Button
        android:id="@+id/btn_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textSize="24sp"
        />

      <Button
        android:id="@+id/btn_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="24sp"
        />

      <Button
        android:id="@+id/btn_F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F"
        android:textSize="24sp"
        />
    </TableRow>

    <TableRow
      android:layout_weight="1"
      android:gravity="center">

      <Button
        android:id="@+id/btn_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="24sp"
        />

      <Button
        android:id="@+id/btn_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="24sp"
        />

      <Button
        android:id="@+id/btn_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textSize="24sp"
        />

      <Button
        android:id="@+id/btn_E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E"
        android:textSize="24sp"
        />
    </TableRow>

    <TableRow
      android:layout_weight="1"
      android:gravity="center">

      <Button
        android:id="@+id/btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="24sp"
        />

      <Button
        android:id="@+id/btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="24sp"
        />

      <Button
        android:id="@+id/btn_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="24sp"
        />

      <Button
        android:id="@+id/btn_D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D"
        android:textSize="24sp"
        />
    </TableRow>

    <TableRow
      android:layout_weight="1"
      android:gravity="center">

      <Button
        android:id="@+id/btn_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="24sp"
        />

      <Button
        android:id="@+id/btn_A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:textSize="24sp"
        />

      <Button
        android:id="@+id/btn_B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B"
        android:textSize="24sp"
        />

      <Button
        android:id="@+id/btn_C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:textSize="24sp"
        />
    </TableRow>

    <TableRow
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:gravity="center"
      >

      <Button
        android:id="@+id/btn_dec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_span="2"
        android:text="Decimal"
        android:textSize="24sp"
        />

      <Button
        android:id="@+id/btn_hex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_span="2"
        android:text="Hexadecimal"
        android:textSize="18sp"
        />

    </TableRow>

    <TableRow
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:gravity="center"
      android:textSize="24sp"
      >

      <Button
        android:id="@+id/btn_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_span="2"
        android:text="="
        android:textSize="24sp"
        />

      <Button
        android:id="@+id/btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_span="2"
        android:text="Clear"
        android:textSize="24sp"
        />
    </TableRow>

    <TableRow
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:gravity="center">

      <TextView
        style="@android:style/Widget.ActionButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="right|bottom"
        android:text="www.33oy.com@Shad0wMoon"
        android:textSize="8sp"/>
    </TableRow>
  </TableLayout>

</LinearLayout>
