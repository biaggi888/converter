<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:gravity="center"
  android:orientation="vertical"
  android:background="#882288"
>
<TextView
  android:id="@+id/mDebug"
  android:layout_marginTop="20dp"
  android:layout_width="match_parent"
  android:layout_height="42dp" 
  android:textSize="32sp"
  android:text="Value : "
  android:layout_gravity="center_vertical"
  android:editable="false"
  android:background="#777000"/>
  <TextView
    android:id="@+id/mTvDisplayDec"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="42dp" 
    android:textSize="32sp"
    android:text="DEC . "
    android:layout_gravity="center_vertical"
    android:editable="false"
    android:background="#777000"/>
  <TextView
    android:id="@+id/mTvDisplayHex"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="42dp" 
    android:textSize="32sp"
    android:text="HEX . "
    android:layout_gravity="center_vertical"
    android:editable="false"
    android:background="#777000"/>
  <TableLayout
    android:layout_marginTop="20dp"
    android:id="@+id/mTlNumberPad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    android:numColumns="4"
  >
    <TableRow
      android:layout_weight="1"
      android:gravity="center">
      <Button
        android:id="@+id/btn_7"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
      />
      <Button
        android:id="@+id/btn_8"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
      />
      <Button
        android:id="@+id/btn_9"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
      />
      <Button
        android:id="@+id/btn_F"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F"
      />
    </TableRow>
    <TableRow
      android:layout_weight="1"
      android:gravity="center">
      <Button
        android:id="@+id/btn_4"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
      />
      <Button
        android:id="@+id/btn_5"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
      />
      <Button
        android:id="@+id/btn_6"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
      />
      <Button
        android:id="@+id/btn_E"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E"
      />
    </TableRow>
    <TableRow
      android:layout_weight="1"
      android:gravity="center">
      <Button
        android:id="@+id/btn_1"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
      />
      <Button
        android:id="@+id/btn_2"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
      />
      <Button
        android:id="@+id/btn_3"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
      />
      <Button
        android:id="@+id/btn_D"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D"
      />
    </TableRow>
    <TableRow
      android:layout_weight="1"
      android:gravity="center">
      <Button
        android:id="@+id/btn_0"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
      />
      <Button
        android:id="@+id/btn_A"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
      />
      <Button
        android:id="@+id/btn_B"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B"
      />
      <Button
        android:id="@+id/btn_C"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
      />
    </TableRow>
    <TableRow 
      android:layout_weight="1"
      android:gravity="center"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
    >
      <Button
        android:id="@+id/btn_dec"
        android:text="Decimal"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_span="2"
      />
      <Button
        android:id="@+id/btn_hex"
        android:text="Hexadecimal"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_span="2"
      />
    
    </TableRow>
    <TableRow
      android:layout_weight="1"
      android:gravity="center"
      android:textSize="24sp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      >
      <Button
        android:id="@+id/btn_result"
        android:text="="
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_span="2"
      />
      <Button
        android:id="@+id/btn_clear"
        android:text="Clear"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_span="2"
      />
    </TableRow>
  </TableLayout>
</LinearLayout>
